<h1>New Cat</h1>

<form action= <%= cats_url %> method="POST">
    <label>Name:
        <input type="text" name="cat[name]" value="">
    </label>
    <br>
    <label>Birthdate:
        <input type="date" name="cat[birth_date]"
            value="">
    </label>
     <!-- <input type="text" name="cat[color]" value=""> -->
     <br>
    <label> Color: </label>
    <select> 
        <option value="" disabled selected> -- select a color -- </option>
        <% Cat::CAT_COLORS.each do |color| %>
            <option value="<%= color %>"> <%= color %></option>
            <!---
            <option value="actual value 1">Display Text 1</option>
            <option value="actual value 2">Display Text 2</option>
            <option value="actual value 3">Display Text 3</option>
            --->
        <% end %>
    </select>
    <br>
    <label>Sex:
        
        <input type="radio" name="cat[sex]" value="M" > Male
        
        <input type="radio" name="cat[sex]" value="F" > Female
    </label>
    <br>
    <label>Description:
        <textarea type="text" name="cat[description]" value=""></textarea>
    </label>
    
</form>